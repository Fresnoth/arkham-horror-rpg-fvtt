<fieldset>
    <legend>
        INSIGHT
        <a class='item-control' data-action="clickedSpendInsight" title="Spend Insight">
            <i class="fa-solid fa-lightbulb"></i>
        </a>
        <a class='item-control' data-action="clickedRefreshInsight" title="Refresh Insight">
            <i class="fa-solid fa-arrow-rotate-right"></i>
        </a>
    </legend>

    <div class="grid grid-2col">
        <div class="form-group"><label class="styled-label">LIMIT</label>
            <input type="number" name="system.insight.limit" value="{{system.insight.limit}}" data-dtype="Number" class="fancy-input">
        </div>
        <div class="form-group">
            <label class="styled-label">REMAINING</label>
            <input type="number" name="system.insight.remaining" value="{{system.insight.remaining}}"
                data-dtype="Number" class="fancy-input">
        </div>
    </div>
</fieldset>