<section class="tab {{tabs.form.id}} {{tabs.form.cssClass}} scrollable" id="form" data-tab="{{tabs.form.id}}"
    data-group="{{tabs.form.group}}">
    <div class="resource-group-styled">
        <div class="form-group">
            <label for="weight">{{localize "ITEM.Weapon.weight"}}</label>
            <input type="number" id="weight" name="system.weight" value="{{system.weight}}" min="0" />
        </div>
        <div class="form-group">
            <label for="skill">{{localize "ITEM.Weapon.skill"}}</label>
            <select id="skill" name="system.skill">
                {{> "systems/arkham-horror-rpg-fvtt/templates/shared/_skill_options.hbs" skill=system.skill}}
            </select>
        </div>
        <div class="form-group">
            <label for="damage">{{localize "ITEM.Weapon.damage"}}</label>
            <input type="number" id="damage" name="system.damage" value="{{system.damage}}" min="1" />
        </div>
        <div class="form-group">
            <label for="injuryRating">{{localize "ITEM.Weapon.injuryRating"}}</label>
            <input type="number" id="injuryRating" name="system.injuryRating" value="{{system.injuryRating}}" min="0" />
        </div>
        <div class="form-group">
            <label for="range">{{localize "ITEM.Weapon.range"}}</label>
            <input type="number" id="range" name="system.range" value="{{system.range}}" min="0" />
        </div>
        <div class="form-group">
            <label for="ammunitionMax">{{localize "ITEM.Weapon.ammunitionMax"}}</label>
            <input type="number" id="ammunitionMax" name="system.ammunition.max" value="{{system.ammunition.max}}"
                min="0" />
        </div>
        <div class="form-group">
            <label for="cost">{{localize "ITEM.Weapon.cost"}}</label>
            <input type="number" id="cost" name="system.cost" value="{{system.cost}}" min="0" step="0.01" inputmode="decimal" />
        </div>
        <div class="form-group">
            <label for="reloadCost">{{localize "ITEM.Weapon.reloadCost"}}</label>
            <input type="number" id="reloadCost" name="system.reloadCost" value="{{system.reloadCost}}" min="0" step="0.01" inputmode="decimal" />
        </div>
        <div class="form-group">
            <label for="reloadAfterUsage">{{localize "ITEM.Weapon.reloadAfterUsage"}}</label>
            <input type="checkbox" id="reloadAfterUsage" name="system.ammunition.reloadAfterUsage" {{#if
                system.ammunition.reloadAfterUsage}}checked{{/if}} />
        </div>
        <div class="form-group">
            <label for="isRelic">{{localize "ITEM.Weapon.isRelic"}}</label>
            <input type="checkbox" id="isRelic" name="system.isRelic" {{#if system.isRelic}}checked{{/if}} />
        </div>
    </div>
</section>