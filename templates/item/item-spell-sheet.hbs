<section class="tab {{tabs.form.id}} {{tabs.form.cssClass}} scrollable" id="form"
    data-tab="{{tabs.form.id}}" data-group="{{tabs.form.group}}">
    <div class="form-group">
        <label for="skill">{{localize "ITEM.Weapon.skill"}}</label>
        <select id="skill" name="system.skill">
            <option value="lore" {{#if (eq system.skill "lore")}}selected{{/if}}>{{localize "ARKHAM_HORROR.SKILL.lore"}}</option>
            <option value="knowledge" {{#if (eq system.skill "knowledge")}}selected{{/if}}>{{localize "ARKHAM_HORROR.SKILL.knowledge"}}</option>
            <option value="wits" {{#if (eq system.skill "wits")}}selected{{/if}}>{{localize "ARKHAM_HORROR.SKILL.wits"}}</option>
        </select>
    </div>
    <div class="form-group">
        <label for="range">{{localize "ITEM.Weapon.range"}}</label>
        <input type="number" id="range" name="system.range" value="{{system.range}}" min="0"/>
    </div>
</section>