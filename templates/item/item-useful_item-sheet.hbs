<section class="tab {{tabs.form.id}} {{tabs.form.cssClass}} scrollable" id="form" data-tab="{{tabs.form.id}}"
    data-group="{{tabs.form.group}}">
    <div class="resource-group-styled">
        <div class="form-group">
            <label for="has-special-rules">Has Special Rules</label>
            <input type="checkbox" id="has-special-rules" name="system.hasSpecialRules" {{#if system.hasSpecialRules}}checked{{/if}} />
        </div>
        <div class="form-group">
            <label for="weight">{{localize "ITEM.UsefulItem.weight"}}</label>
            <input type="number" id="weight" name="system.weight" value="{{system.weight}}" min="0" />
        </div>
        <div class="form-group">
            <label for="cost">{{localize "ITEM.Weapon.cost"}}</label>
            <input type="number" id="cost" name="system.cost" value="{{system.cost}}" min="0" />
        </div>
        <div class="form-group">
            <label for="uses">{{localize "ITEM.UsefulItem.uses"}}</label>
            <input type="number" id="uses" name="system.uses.current" value="{{system.uses.current}}" min="0" />
            /
            <input type="number" id="uses" name="system.uses.max" value="{{system.uses.max}}" min="0" />
        </div>
    </div>
</section>